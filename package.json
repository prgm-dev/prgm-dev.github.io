		"remark-abbr": "^1.4.1",
		"remark-math": "3.0.0",
		"svelte": "^3.49.0",
		"svelte-check": "^2.8.0",
		"svelte-fa": "^3.0.3",
		"svelte-preprocess": "^4.10.7",
		"tslib": "^2.4.0",
		"typescript": "^4.7.4",
